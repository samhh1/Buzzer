#include <LowPower.h>

//int ledState = LOW;
//unsigned long previousMillis = 0;
//const long interval = 10000;
int LED = 13;
int motionSignal = 2;
int buzzer1 = 7;
int buzzer2 = 8;

void setup() {
  pinMode(buzzer1, OUTPUT);
  pinMode(buzzer2, OUTPUT);
  pinMode(LED, OUTPUT);
  pinMode(motionSignal, INPUT);
  pinMode(11, OUTPUT);
  digitalWrite(11, HIGH);
  pinMode(12, OUTPUT);
  digitalWrite(12, LOW);
  delay(5000);
}

void loop() {
  // attachInterrupt(0, wakeUp, RISING);
  // LowPower.powerDown(SLEEP_FOREVER, ADC_OFF, BOD_OFF);
  // detachInterrupt(0);

  if (digitalRead(motionSignal) == HIGH)
  {
    soundAlarm();
  }
}

void wakeUp()
{
  //  digitalWrite(LED, HIGH);
}

void soundAlarm()
{
  for (int i = 0; i < 15; i++)
  {
    delay(1000);
    tone(buzzer1, 4200, 1000); // buzz the buzzer on pin 4 at 2500Hz for 500 milliseconds
    tone(buzzer2, 4200, 1000); // buzz the buzzer on pin 4 at 2500Hz for 500 milliseconds
    delay(1000);
    //    digitalWrite(LED, HIGH);
    //    delay(1000);
    //    digitalWrite(LED, LOW);
    //    delay(1000);
  }
}







